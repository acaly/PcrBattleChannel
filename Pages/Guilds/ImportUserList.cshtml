@page
@model PcrBattleChannel.Pages.Guilds.ImportUserListModel
@{
    ViewData["Title"] = "导入用户列表";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>导入用户列表</h4>
        <hr />
        <partial name="_StatusMessage" model="Model.StatusMessage ?? Model.StatusMessage2" />
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="form-group">
                <p>粘贴QQ号列表来批量创建用户，每个QQ号一行</p>
            </div>
            <div class="form-group">
                <textarea asp-for="Input" class="form-control" rows="20"></textarea>
                <span asp-validation-for="Input" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                @Html.HelpMessage("设置密码后所有用户将可以直接使用这个密码登录。如果不希望使用统一的密码可以留空，由会长发送重置链接。")
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </form>
    </div>
</div>
