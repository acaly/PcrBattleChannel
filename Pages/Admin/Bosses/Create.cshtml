@page
@model PcrBattleChannel.Pages.Admin.Bosses.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "添加Boss";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h4>Boss</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Boss.BattleStageID" class="control-label"></label>
                <select asp-for="Boss.BattleStageID" class="form-control" asp-items="ViewBag.BattleStageID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Boss.Name" class="control-label"></label>
                <input asp-for="Boss.Name" class="form-control" />
                <span asp-validation-for="Boss.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.ShortName" class="control-label"></label>
                <input asp-for="Boss.ShortName" class="form-control" />
                <span asp-validation-for="Boss.ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.Life" class="control-label"></label>
                <input asp-for="Boss.Life" class="form-control" />
                <span asp-validation-for="Boss.Life" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Boss.Score" class="control-label"></label>
                <input asp-for="Boss.Score" class="form-control" />
                <span asp-validation-for="Boss.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
