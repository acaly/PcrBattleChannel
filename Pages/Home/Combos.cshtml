@page "/Combo"
@model PcrBattleChannel.Pages.Home.CombosModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "个人分刀";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h4>个人分刀</h4>
<hr />

<partial name="_Combo_StatusPartial" model="Model" />

<h4>分刀套餐</h4>
<div class="row pt-2 pb-2">
    <div class="col-md-10">
        <form method="post" asp-page-handler="refresh">
            <button type="submit" class="btn btn-primary">重新计算</button>
        </form>
        <table>
        </table>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserCombo[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCombo[0].Zhou1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCombo[0].Zhou2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserCombo[0].Zhou3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserCombo)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NetValue) / @Html.DisplayFor(modelItem => item.Value)
                </td>
                @if (item.Zhou1ID.HasValue)
                {
                    <td>
                        @Html.DisplayFor(m => item.Zhou1.ZhouVariant.Zhou.Boss.ShortName)
                        (<a asp-page="/Zhous/Details"
                            asp-route-id="@item.Zhou1.ZhouVariant.ZhouID">@Html.DisplayFor(m => item.Zhou1.ZhouVariant.Zhou.Name)</a>)
                    </td>
                }
                else
                {
                    <td>(无)</td>
                }
                @if (item.Zhou2ID.HasValue)
                {
                    <td>
                        @Html.DisplayFor(m => item.Zhou2.ZhouVariant.Zhou.Boss.ShortName)
                        (<a asp-page="/Zhous/Details"
                            asp-route-id="@item.Zhou2.ZhouVariant.ZhouID">@Html.DisplayFor(m => item.Zhou2.ZhouVariant.Zhou.Name)</a>)
                    </td>
                }
                else
                {
                    <td>(无)</td>
                }
                @if (item.Zhou3ID.HasValue)
                {
                    <td>
                        @Html.DisplayFor(m => item.Zhou3.ZhouVariant.Zhou.Boss.ShortName)
                        (<a asp-page="/Zhous/Details"
                            asp-route-id="@item.Zhou3.ZhouVariant.ZhouID">@Html.DisplayFor(m => item.Zhou3.ZhouVariant.Zhou.Name)</a>)
                    </td>
                }
                else
                {
                    <td>(无)</td>
                }
                <td>选定此套餐</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr><td colspan="5"/></tr>
    </tfoot>
</table>

<style>
    #character-list .character-list-item {
        display: inline-block;
        position: relative;
    }

    #character-list .tick-mark {
        position: absolute;
        right: -3px;
        bottom: -3px;
        width: 25px;
        height: 25px;
        z-index: 1;
        display: none;
    }

    #character-list .tick-mark img {
        width: 100%;
    }

    #character-list .selected .tick-mark {
        display: block;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        function user_status_confirm_success() {
            $('#status-confirm-button').prop('disabled', true);
            $('.guessed').hide();
        }
        function toggle_user_status_edit(btn) {
            btn.form.reset();
            $('#user-status-display').toggle();
            $('#user-status-edit').toggle();
        }
        function user_status_update_failure() {
            alert('更新失败');
        }
        function user_status_edit_character_click(e) {
            $(e).toggleClass('selected');
            var allSelected = $('#character-list .selected');
            var str = '';
            allSelected.each(function (a, b) {
                if (str.length > 0) str = str + ',';
                str = str + b.getAttribute('data-character-id');
            });
            $('#characterliststring').val(str);
        }
    </script>
}